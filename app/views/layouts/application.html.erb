<!DOCTYPE html>

<!-- app/views/layouts/application.html.erb -->
<html lang="ru">
  <head>
    <title><%= content_for(:title) || "Мехмат ЮФУ - Институт математики, механики и компьютерных наук" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <%= yield :head %>

    <!-- <link rel="manifest" href="/manifest.json"> -->
     <link rel="icon" href="/icon.png" type="image/png">
     <link rel="icon" href="/icon.svg" type="image/svg+xml">
     <link rel="apple-touch-icon" href="/icon.png">
    <!-- <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %> -->

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        /* Медиа-запросы для адаптивности */
        @media (max-width: 1024px) {
            .desktop-sidebar {
                display: none;
            }
            .mobile-menu {
                display: block;
            }
            .main-content {
                width: 100%;
            }

            .header-logo {
                width: 6rem;  /* 96px */
                position: relative;
                left: auto;
                top: auto;
                transform: none;
            }
        }

        @media (min-width: 1536px) {
            .container {
                max-width: 1536px;
            }

            .main-content {
                padding-left: 2rem;
                padding-right: 2rem;
            }

            .desktop-sidebar {
                width: 300px;
            }
        }

        @media (min-width: 2000px) {
            .container {
                max-width: 1800px;
            }

            .desktop-sidebar {
                width: 350px;
            }
        }

        @media (max-width: 767px) {
            .mobile-nav {
                display: flex;
                justify-content: space-between;
                width: 100%;
                padding: 0.5rem 0;
            }

            .mobile-nav ul {
                flex-grow: 1;
                justify-content: space-around;
            }

            .mobile-nav li {
                margin: 0;
            }

            .mobile-nav a {
                font-size: 0.9rem;
                padding: 0.25rem 0.5rem;
            }

            .header-logo {
                width: 4rem;  /* 64px */
            }
        }

        .header-logo {
            width: 7rem;  /* 112px */
            height: auto;
            max-height: 80px;
            object-fit: contain;
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
        }
        .header-logo:hover {
            transform: scale(1.05);
        }

        .nav-item {
            position: relative;
            transition: all 0.3s ease;
        }

        .nav-item:after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -2px;
            left: 0;
            background-color: #0d9488;
            transition: width 0.3s ease;
        }

        .nav-item:hover:after {
            width: 100%;
        }

        .dropdown-content {
            max-height: 0;
            overflow-y: hidden;
            transition: all 0.25s;
        }

        .dropdown-open .dropdown-content {
            max-height: 500px;
            transition: all 0.4s;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }

            const dropdownButtons = document.querySelectorAll('.dropdown-button');

            dropdownButtons.forEach(button => {
                button.addEventListener('click', function() {
                    this.parentElement.classList.toggle('dropdown-open');
                    const icon = this.querySelector('i');
                    icon.classList.toggle('fa-chevron-down');
                    icon.classList.toggle('fa-chevron-up');
                });
            });
        });
    </script>
  </head>


  <body class="flex flex-col min-h-screen bg-gray-50">
    <%= render "layouts/header" %>

    <%= render "layouts/mobile_menu" %>

    <div class="flex-grow flex">
      <div class="desktop-sidebar w-64 hidden lg:block">
        <%= render "layouts/navbar" %>
      </div>

      <div class="main-content flex-grow p-4 lg:p-6 bg-white md:bg-gray-50">
        <div class="mx-auto w-full max-w-[1800px] px-4">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= render "layouts/footer" %>
  </body>
</html>
