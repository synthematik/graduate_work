<!--app/views/admin/shared/_search_form.html.erb-->

<div class="mb-6">
  <%= form_with url: url, method: :get, class: "flex" do |f| %>
    <%= f.text_field :q, value: params[:q],
                     placeholder: "Поиск...",
                     class: "px-4 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 flex-1" %>
    <%= f.submit "Найти",
                 class: "px-4 py-2 bg-teal-600 text-white rounded-r-md hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>
  <% end %>
</div>
