<!-- app/views/admin/shared/_action_buttons.html.erb -->

<div class="flex space-x-2">
  <%= link_to show_path, class: "px-3 py-1 text-xs bg-teal-100 text-teal-700 rounded hover:bg-teal-200" do %>
    <i class="fas fa-eye mr-1"></i> Просмотр
  <% end %>

  <%= link_to edit_path, class: "px-3 py-1 text-xs bg-blue-100 text-blue-700 rounded hover:bg-blue-200" do %>
    <i class="fas fa-edit mr-1"></i> Изменить
  <% end %>

  <%= button_to delete_path, method: :delete,
                form: { data: { turbo_confirm: "Вы уверены?" } },
                class: "px-3 py-1 text-xs bg-red-100 text-red-700 rounded hover:bg-red-200" do %>
    <i class="fas fa-trash mr-1"></i> Удалить
  <% end %>
</div>