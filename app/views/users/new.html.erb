<body>
  <div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-sm border-0" style="width: 100%; max-width: 400px;">
      <div class="card-body p-4">
        <h2 class="card-title text-center mb-4">Регистрация</h2>

        <%= form_with model: @user, html: { multipart: true, class: 'needs-validation' }, data: { turbo: false } do |form| %>
          <div class="mb-3">
            <%= form.label :email, "Email", class: 'form-label fw-semibold' %>
            <%= form.email_field :email, class: 'form-control form-control-lg', required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :password, 'Пароль', class: 'form-label fw-semibold' %>
            <%= form.password_field :password, class: 'form-control form-control-lg', required: true %>
          </div>

          <div class="mb-4">
            <%= form.label :password_confirmation, 'Подтверждение пароля', class: 'form-label fw-semibold' %>
            <%= form.password_field :password_confirmation, class: 'form-control form-control-lg', required: true %>
          </div>

          <%= form.submit 'Зарегистрироваться', class: "btn btn-primary btn-lg w-100 mb-3" %>

          <div class="text-center pt-2">
            <span class="text-muted">Есть аккаунт?</span>
            <%= link_to "Войти", new_session_path, class: "ms-1 text-decoration-none" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>