<%= form_with(model: [:admin, event], local: true, class: "space-y-6") do |form| %>
  <%= render "admin/shared/form_errors", resource: event %>

  <div class="grid grid-cols-1 gap-6">
    <!-- Основные поля -->
    <div>
      <%= form.label :title, "Название события", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" %>
    </div>

    <div>
      <%= form.label :body, "Описание события", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :body, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" %>
    </div>

    <!-- Даты и время -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :starts_at, "Дата и время начала", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.datetime_local_field :starts_at, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" %>
      </div>

      <div>
        <%= form.label :ends_at, "Дата и время окончания (необязательно)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.datetime_local_field :ends_at, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" %>
      </div>
    </div>

    <!-- Местоположение -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :location, "Местоположение", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :location, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" %>
      </div>
    </div>

    <!-- Дополнительные настройки -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :published, "Статус публикации", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="mt-1">
          <label class="inline-flex items-center">
            <%= form.check_box :published, class: "h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded" %>
            <span class="ml-2 text-sm text-gray-700">Опубликовать событие</span>
          </label>
        </div>
      </div>
      <div class="-mt-22">
        <%= form.label :user_id, "Автор", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :user_id, User.all.map { |u| [u.email, u.id] }, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500" %>
      </div>
    </div>

    <!-- Кнопки -->
    <div class="pt-4">
      <%= form.submit "Сохранить событие", class: "px-4 py-2 bg-teal-600 text-white rounded-md hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2" %>
      <%= link_to "Отмена", admin_events_path, class: "ml-2 px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
    </div>
  </div>
<% end %>