<body>
  <div class="container py-4">
    <h1 class="display-5 fw-bold mb-4 text-center text-primary">Новости ИММИКН ЮФУ</h1>
    <div class="row g-4">
      <% @articles.each do |article| %>
        <div class="col-md-6 col-lg-7">
          <div class="card h-100 border-0 shadow-sm hover-shadow transition-all">
            <div class="card-header bg-white border-0 pb-0">
              <h3 class="h5 fw-bold mb-2"><%= article.title %></h3>
              <div class="d-flex justify-content-between align-items-center text-muted small">
                <span>
                  <i class="fas fa-user-circle me-1"></i>
                  <%= article.user&.email || 'Администрация' %>
                </span>
                <span>
                  <i class="far fa-calendar-alt me-1"></i>
                  <%= l(article.created_at.to_date, format: :short) %>
                </span>
              </div>
            </div>

            <div class="card-body pt-2">
              <div class="card-text mb-3">
                <%= truncate(article.body, length: 120, separator: ' ') %>
              </div>
            </div>

            <div class="card-footer bg-transparent border-0 pt-0">
              <%= link_to "Подробнее", "#", class: "btn btn-sm btn-outline-primary stretched-link" %>
              <% if article.created_at != article.updated_at %>
                <small class="text-muted ms-2">
                  <i class="fas fa-pencil-alt me-1"></i>
                  Обновлено <%= time_ago_in_words(article.updated_at) %> назад
                </small>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>