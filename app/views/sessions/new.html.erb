<div class="w-full h-full flex justify-center">
  <div class="h-full bg-cyan-100/10 flex flex-col justify-center">
    <div class="border rounded-xl border-gray-300">
      <div class="p-4">
        <h2 class="text-xl font-bold text-center mb-4">Вход в систему</h2>

        <%= form_with scope: :session, url: session_path, html: { class: 'needs-validation' }, data: { turbo: false } do |form| %>
          <div class="mb-3 flex gap-2 ">
            <%= form.label :email, "Email", class: "font-semibold w-15" %>
            <%= form.email_field :email, class: 'grow rounded-sm border border-gray-200 h-8 px-1', required: true %>
          </div>

          <div class="mb-4 flex gap-2">
            <%= form.label :password, 'Пароль', class: 'font-semibold w-15' %>
            <%= form.password_field :password, class: 'grow rounded-sm border border-gray-200 h-8 px-1', required: true %>
          </div>
          <div class="text-end mt-2">
            <%= link_to "Забыли пароль?", "#", class: "hover:text-cyan-500" %>
          </div>

          <div class="w-100 flex justify-center">
            <%= form.submit 'Войти', class: " text-lg font-semibold border border-gray-300 py-2 px-4 rounded-sm my-3 hover:cursor-pointer hover:bg-cyan-500 hover:text-white" %>
          </div>

          <div class="text-center pt-2">
            <span class="text-muted">Нет аккаунта?</span>
            <%= link_to "Зарегистрироваться", new_user_path, class: "hover:text-cyan-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
